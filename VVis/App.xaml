<Application
    x:Class="VVis.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VVis"
    xmlns:c="using:VVis.Controls"
    RequestedTheme="Dark">
    <Application.Resources>
        <Style TargetType="c:Timeline" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="c:Timeline">
                        <Grid>
                            <c:TimelinePanel x:Name="TPanel">
                            </c:TimelinePanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="c:TimelineItem" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="c:TimelineItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
